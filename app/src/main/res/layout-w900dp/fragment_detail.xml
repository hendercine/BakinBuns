<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/step_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hendercine.android.bakinbuns.ui.details.DetailFragment"
    tools:ignore="MergeRootFrame">

    <VideoView
        android:id="@+id/vid_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_weight="2"/>

    <android.support.v7.widget.CardView
        android:id="@+id/detail_step_instruction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_weight="1">

        <!--TODO: Style the step instruction text-->
        <TextView
            android:id="@+id/step_instruction_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="@string/step_instruction_placeholder_text"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
