<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <fragment
        android:id="@+id/step_detail_fragment"
        android:name="com.hendercine.android.bakinbuns.ui.StepsDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>

    <LinearLayout
        android:id="@+id/nav_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_btn_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/next_step_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="@dimen/min_btn_height"
            android:text="@string/next_step_btn"
            android:visibility="visible"/>

        <Button
            android:id="@+id/prev_step_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="@dimen/min_btn_height"
            android:text="@string/previous_step_btn"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>